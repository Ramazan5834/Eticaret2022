
@{
    ViewBag.Title = "Slider Resim Güncelle";
}

@model Eticaret2022.DataEntities.DataModels.Slider

<div class="col-sm-10 container-fluid">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header">
            <h5>Slider Resmi Güncelle</h5>
        </div>
        <div class="card-block">
            <form method="post" action="/Admin/Slider/UpdateSlider" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Başlık</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Baslik, new { @class = "form-control", placeholder = "Başlık Giriniz" })
                        @Html.ValidationMessageFor(m => m.Baslik, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">İçerik</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Icerik, new { @class = "form-control", placeholder = "İçerik Giriniz" })
                        @Html.ValidationMessageFor(m => m.Icerik, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Slider Resmi</label>
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-4">
                            <div>
                                <h5 class="">Şu anki resminiz:</h5>
                                <img src="@Model.ResimPath" style="height: 10rem !important;" alt="@Model.Baslik" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div id="alanOnizleme" style="display: none !important;">
                                <h5 class="text-center">Seçtiğiniz resim:</h5>
                                <img id="resimOnizleme" class="w-100" style="height: 10rem !important;" />
                            </div>
                        </div>
                        <div class="col-md-12 ml-2">
                            <label>Resim Seç:</label>
                            <input type="file" class="form-control-file" name="imageUpload" id="imageUpload" />
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(m => m.ResimPath)
                <br />
                <button type="submit" class="btn waves-effect waves-light btn-primary"><i class="icofont icofont-check-circled"></i>Kaydet</button>

            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#imageUpload").change(function (e) {
                $("#alanOnizleme").show();
                $("#resimOnizleme").attr("src", URL.createObjectURL(e.target.files[0]));
            })
        })
    </script>

    <script src="/Content/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="/Content/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
