@{
    ViewBag.Title = "Index";
}
@model List<Eticaret2022.DataEntities.DataModels.SistemHata>

@if (Model.Count != 0)
{
    <div class="card">
        <div class="card-header">
            <h5>Sistemde Oluşan Hatalar</h5>
            <div class="card-header-right">
            </div>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Oluşma Tarihi</th>
                            <th>Kaynak</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sistemHata in Model)
                        {
                            <tr>
                                <td>@sistemHata.Tarih</td>
                                <td>@sistemHata.Kaynak</td>
                                <td>
                                    <a type="button" href="/Admin/SystemError/SystemErrorDetail?systemErrorId=@sistemHata.Id" class="btn btn-sm btn-primary"><i class="icofont icofont-info"></i>Detay Gör</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div> }
else
{
    <h1>Kayıtlı Sistem Hatası Yok</h1>
}
