
@{
    ViewBag.Title = "Üst Kategori Güncelle";
}

@model Eticaret2022.DataEntities.DataModels.UstKategori

<div class="col-sm-10 container-fluid">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header">
            <h5>Üst Kategori Güncelle</h5>
        </div>
        <div class="card-block">
            <form method="post" action="/Admin/UpCategory/UpdateUpCategory">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Adı</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Adi, new { @class = "form-control", placeholder = "Üst Kategorinin Adını Giriniz" })
                        @Html.ValidationMessageFor(m => m.Adi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Tanımı</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Tanimi, new { @class = "form-control", placeholder = "Üst Kategorinin Tanımını Giriniz" })
                        @Html.ValidationMessageFor(m => m.Tanimi, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(m => m.AktifDurum, new { @Value = true })
                <br />
                <button type="submit" class="btn waves-effect waves-light btn-primary"><i class="icofont icofont-check-circled"></i>Kaydet</button>

            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="/Content/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="/Content/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
