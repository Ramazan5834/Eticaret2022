
@{
    ViewBag.Title = "Reddedilmiş Siparişler";
}
@model List<Eticaret2022.DataEntities.DataModels.SatisDetay>

@if (Model.Count != 0)
{
    <div class="card">
        <div class="card-header" style="background-color: #ff6464bd">
            <h5>Reddedilmiş Siparişler</h5>
            <div class="card-header-right">
            </div>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Sipariş Veren Kişi</th>
                        <th>Ödeme Tipi</th>
                        <th>Total Fiyat</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var satisDetay in Model)
                    {
                        <tr>
                            <td>@satisDetay.AspNetUsers.Name @satisDetay.AspNetUsers.Surname</td>
                            <td>@satisDetay.OdemeTip.Adi</td>
                            <td>@satisDetay.TotalFiyat TL</td>
                            <td>@satisDetay.Tarih</td>
                            <td>
                                <a type="button" href="/Admin/Order/OrderDetail?orderId=@satisDetay.Id&pageState=3" class="btn btn-sm btn-primary"><i class="icofont icofont-info"></i>Detay Gör</a>
                            </td>
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div> }
else
{
    <h1>Reddedilmiş Sipariş Yok</h1>
}


