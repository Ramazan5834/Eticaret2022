@{
    ViewBag.Title = "CreateNewAdmin";
}
@model Eticaret2022.Models.RegisterViewModel
<div class="col-sm-10 container-fluid">
    <!-- Basic Form Inputs card start -->
    <div class="card">
        <div class="card-header">
            <h5>Admin Oluştur</h5>
        </div>
        <div class="card-block">
            <form method="post" action="/Account/AdminRegister">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" }, "invalidRegister")
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">İsim</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "İsim Giriniz" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Soyisim</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Soyisim Giriniz" })
                        @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Giriniz" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Telefon Numarası</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Telefon Numarası Giriniz" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Parola</label>
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parola Giriniz" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Parola Onayı</label>
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Parola Onay Giriniz" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <button type="submit" class="btn waves-effect waves-light btn-primary"><i class="icofont icofont-check-circled"></i>Oluştur</button>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="/Content/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="/Content/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
